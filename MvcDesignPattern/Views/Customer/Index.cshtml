
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form asp-controller="Customer" asp-action="Search" method="post">
        <label for="criteria">Search Criteria :</label>
        <input name="criteria" />
        <label for="searchby">Search By :</label>
        <select name="searchby">
