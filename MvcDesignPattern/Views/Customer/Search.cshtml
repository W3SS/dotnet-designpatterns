@model List<MvcDesignPattern.Models.Customer>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Search</title>
</head>
<body>
    <h1>Search Results</h1>
    <form action="Export" method="post">
        <input type="hidden" name="criteria" value="@ViewBag.Criteria" />
        <input type="hidden" name="searchby" value="@ViewBag.SearchBy" />
        <input type="submit" value="Export" />
    </form>
    <table border="1" cellpadding="5">
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.Country</td>
            </tr>
        }
    </table>
    <br />
    <a asp-controller="Customer" asp-action="Index">Back to search</a>
</body>
</html>
