
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h1>Execute Query</h1>
    <form asp-controller="AbstractFactory" asp-action="ExecuteQuery" method="post">
        <h4>Select Factory :</h4>
        <select name="type">
            <option value="sqlclient">SqlClient</option>
            @*<option value="oledb">OleDb</option>*@
        </select>
        <h4>Enter your query :</h4>
        <textarea name="query" rows="4" cols="40"></textarea>
        <br /><br />
        <input type="submit" value="Execute" />
    </form>
</body>
</html>
